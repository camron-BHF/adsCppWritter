  <POU Name="FB_Collisions" Id="{461ab279-73c2-4ad7-a25a-161aa892a53d}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK FB_Collisions

VAR
	buffer : REAL := 5.0;
	circleSpacing : REAL := 5.0;
	collisionArray : ARRAY[0..29] OF BOOL;
	circlesArray : ARRAY[0..29] OF stCircle;
//	circlesArray2D : ARRAY[0..5, 0..4] OF stCircle;
//	collisionArray2D : ARRAY[0..5, 0..4] OF BOOL;
// 	numCircles : INT := 29;
	
END_VAR

VAR_INPUT
	circle : stCircle;
	rect : stRect;
END_VAR

VAR CONSTANT
	maxObjects : INT := 300;
	numCircles : INT := 29;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
    <Method Name="getCollisions" Id="{6974db9e-282f-40e4-8460-a07689ea46e2}">
      <Declaration><![CDATA[METHOD getCollisions : BOOL

VAR_IN_OUT
//	collisionArray2D : ARRAY[0..5, 0..4] OF BOOL;
	collisionArray : ARRAY[0..29] OF BOOL;
	rects : ARRAY[0..maxObjects] OF stRect;
	
END_VAR

VAR
	fbCollision : FB_Collisions;
	minIndex1, maxIndex1 : INT;
//	minCol, maxCol, minRow, maxRow : INT;
	i, j : INT;
	col, row : INT;
	
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[FOR j := 0 TO (maxObjects - 1) DO
	fbCollision.getMinMaxIndices(rect := rects[j], minIndex => minIndex1, maxIndex => maxIndex1);
	
	FOR i := minIndex1 TO maxIndex1 DO
		IF NOT collisionArray[i] THEN 
			collisionArray[i] := fbCollision.isColliding(circle := circlesArray[i], rect:= rects[j]);
		END_IF
	END_FOR
END_FOR

