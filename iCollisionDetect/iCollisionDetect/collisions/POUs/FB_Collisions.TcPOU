//			IF NOT collisionArray2D[col, row] THEN
//				collisionArray2D[col, row] := fbCollision.isColliding(circle := circlesArray2D[col, row], rect := GVL_collision.rects[j]);
//			END_IF
//		END_FOR
//	END_FOR
//END_FOR]]></ST>
      </Implementation>
    </Method>
    <Method Name="getMinMaxIndices" Id="{ef318a78-fa08-4cdb-8ce3-73cadd251911}">
      <Declaration><![CDATA[METHOD getMinMaxIndices : INT
VAR_INPUT
	rect : stRect;
END_VAR

VAR_OUTPUT
	minIndex, maxIndex : INT;
//	minRowIndex, maxRowIndex : INT;
//	minColIndex, maxColIndex : INT;
END_VAR

VAR
	i : INT;
	rectMinX, rectMaxX : REAL;
//	rectMinY, rectMaxY : REAL;
//	buffer : REAL := GVL_collision.buffer;
//	circleSpacing : REAL := GVL_collision.circleSpacing;
//	numCircles : INT := GVL_collision.numCircles;
//	minRowIndex, maxRowIndex : REAL;
//	minColIndex, maxColIndex : REAL;
END_VAR

]]></Declaration>
      <Implementation>
        <ST><![CDATA[rectMinX := rect.x - buffer;
rectMaxX := rect.x + rect.width + buffer;
//rectMinY := rect.y - buffer;
//rectMaxY := rect.y + rect.height + buffer;

minIndex := MAX(0, REAL_TO_INT(TRUNC(rectMinX / circleSpacing)));
maxIndex := MIN(numCircles, REAL_TO_INT(TRUNC(rectMaxX / circleSpacing)+1));


//minRowIndex := MAX(0, REAL_TO_INT(TRUNC(rectMinY / circleSpacing * 2)));
//maxRowIndex := MIN(4, REAL_TO_INT(TRUNC(rectMaxY / circleSpacing * 2)));

//minColIndex := MAX(0, REAL_TO_INT(TRUNC(rectMinX / circleSpacing)));
//maxColIndex := MIN(5, REAL_TO_INT(TRUNC(rectMaxX / circleSpacing)));

]]></ST>
      </Implementation>
    </Method>
    <Method Name="initCircles" Id="{5ab7e26a-56f7-4398-aa82-d0b7a7dcf5d7}">
      <Declaration><![CDATA[METHOD initCircles

VAR
	i : INT;
	row, col : INT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[FOR i := 0 TO numCircles DO
	circlesArray[i].x := REAL_TO_INT(i * circleSpacing);
	circlesArray[i].y := REAL_TO_INT((i MOD 5) * circleSpacing*2);
	circlesArray[i].radius := 2.0;
END_FOR
//FOR col := 0 TO 5 DO
